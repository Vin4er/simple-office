*, :after, :before
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
	margin: 0
	padding 0
	box-sizing: border-box
	letter-spacing 0px
	outline 0
	box-sizing border-box
	letter-spacing 0px
	font-family: 'PT Sans', sans-serif;




@import  "./layout/inputs.styl"


#page
	height 100vh
	width 100vw
	background: #312E2E
	padding-left: 30px
	padding-right: 30px

.texteditabler
	width 100%
	height 100%
	margin auto
	position relative
	background: white
	border: 1px solid blue
	&-bar
		border-bottom: 1px solid blue
		padding 0  10px
		position absolute
		left 0
		right 0
		height 50px
		background: #F7F7F7
		&-button
			display inline-block
			width: 40px
			height 40px
			&.active
				border: 2px  dashed red
	&-editable
		height 100%
		padding-top: 50px
		width 100%