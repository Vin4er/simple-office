@import  "./layout/inputs.styl"


// Import component
@import "../css/lib/fa/stylus/index"


#page
	height 100vh
	width 100vw
	background: #312E2E
	padding-left: 30px
	padding-right: 30px

.texteditabler
	width 100%
	height 100%
	margin auto
	position relative
	background: white
	border: 1px solid #032828
	&-bar
		border-bottom: 1px solid #112E2E
		padding 0  10px
		position absolute
		left 0
		right 0
		top: 0
		height 50px
		line-height: 50px
		background: #112E2E
		text-align left
		.button
			display: inline-block;
			vertical-align: middle;
			width: 40px
			height: 40px;
			line-height: 40px
		&-button
			display inline-block
			width: inherit
			height inherit
			line-height: inherit
			color #3B9E9E
			border: 1px solid #0A3E3E
			background: #0A3E3E
			cursor: pointer
			&.bold
				fa(bold)
			&.italic
				fa(italic)
			&.underline
				fa(underline)
			&.justifyleft
				fa(align-left)
			&.justifycenter
				fa(align-center)
			&.justifyright
				fa(align-right)
			&.superscript
				fa(superscript)
			&.subscript
				fa(subscript)
			&.InsertUnorderedList
				fa(list-ul)
			&.InsertOrderedList
				fa(list-ol)
			&.active
				background: #112E2E
				color #569E9E
			&wrap
				display: block
				height: 50px
				padding: 0
				line-height: 45px
	&-editable
		height 100%
		padding-top: 50px
		width 100%